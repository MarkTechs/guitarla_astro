---
import {Image} from 'astro:assets'
import logo from '../assets/logo.svg';

const pathname = Astro.url.pathname
console.log(pathname)
---

<header class="header">
   <div class="contenedor barra">
   <a href="/">
    <Image src={logo} alt="Image logo"/>
   </a>

    <nav class="navegacion">
        <a  href="/"  class={pathname === '/' ? 'active': ''}>    
            Home 
        </a>
        <a  href="/about" class={pathname === '/about' ? 'active': ''}>
            Nosotros 
        </a>
        <a  href="/tienda" class={pathname === '/tienda' ? 'active': ''}>
            Tienda 
        </a>
        <a  href="/blog" class={pathname === '/blog' ? 'active': ''}>
            Blog 
        </a>
       
    </nav>         
    </div>
</header>


<!--Styles -->
<style>
.header {
    background-image: linear-gradient(to right, rgb(0 0 0 / .8), rgb(0 0 0 / .7)), url(../assets/header.jpg);
    padding: 5rem 0;
    background-position: center;
    background-size: cover;
}
.header img {
    width: 30rem;
}

.barra {
    display: flex;
    flex-direction: column;
    align-items: center;
}
@media (min-width: 768px) {
    .barra {
        flex-direction: row;
        justify-content: space-between;
    }
}

.navegacion {
    margin-top: 5rem;
    display: flex;
    align-items: center;
    gap: 2rem;
}
@media (min-width: 768px) {
    .navegacion {
        margin: 0;
    }
}

.navegacion a{
display: inline-flex; 
padding-top: 0.625rem;
padding-bottom: 0.625rem; 
padding-left: 1.25rem;
padding-right: 1.25rem; 
margin-right: 0.5rem; 
margin-bottom: 0.5rem; 
flex-direction: row; 
column-gap: 0.5rem; 
justify-content: center; 
align-items: center; 
border-radius: 0.5rem; 
font-weight: 500; 
text-align: center; 
color: #ffffff; 
text-transform: uppercase; 
transition-property: all;
transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
transition-duration: 300ms; 
transition-duration: 200ms; 
transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1); 
--transform-scale-x: .9;
--transform-scale-y: .9; 
cursor: pointer; 
opacity: 0.9; 

}

.navegacion a:hover, .active {
background-color: var(--primary);
opacity: 1; 
 }
</style>